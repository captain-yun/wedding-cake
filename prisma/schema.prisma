generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id
  name        String?
  birthdate   DateTime?
  gender      String?
  email       String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  profile     Profile?
}

model Profile {
  id              String    @id @default(uuid())
  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id])
  location        String?
  occupation      String?
  introduction    String?
  hobbies         String?
  personality     String?
  lifestyle       String?
  avatar_url      String?
  preferences     Json?
  status          String    @default("ONBOARDING") // ONBOARDING, PROFILE_COMPLETED, MATCHING, MEETING, COMPLETED
  onboarding_step Int       @default(1)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}